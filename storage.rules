rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures: fileName format is {userId}_{timestamp}.{ext}
    match /profile-pictures/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && fileName.matches('.*' + request.auth.uid + '_.*');
    }

    // List covers: fileName format is {listId}_{timestamp}
    match /list-covers/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Secret Santa images: path is secret-santa/{userId}/{timestamp}_{filename}
    match /secret-santa/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
