rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read any user profile, but only write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.auth.uid == userId;
      allow update: if request.auth != null
        && request.auth.uid == userId;
    }

    // User stats are publicly readable
    match /userStats/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Username mapping for uniqueness
    match /usernames/{username} {
      allow read: if true; // Allow anyone to check username availability
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      allow update: if false; // Usernames can't be updated directly
      allow delete: if request.auth != null
        && resource.data.userId == request.auth.uid; // Users can delete their own username mappings
    }

    // Race logs - allow all authenticated users to read, only owners to write
    match /raceLogs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Predictions - allow all authenticated users to read, only owners to create/update
    match /predictions/{predictionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null
        && resource.data.userId == request.auth.uid;
      allow delete: if false; // Predictions can't be deleted, only updated
    }

    // Default: require authentication for all other operations
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
